# you can write to stdout for debugging purposes, e.g.
# print("this is a debug message")

def solution(A):
    A.sort()
    even = []
    odd = []

    for i in range(len(A)):
        if i%2 == 0:
            even.append(A[i])
        else:
            odd.append(A[i])
    return (sum(even)-sum(odd))
